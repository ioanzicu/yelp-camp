<% include ../partials/header %>

<div class="container" id="form-container">
	<h1 id="form-edit">Edit <%= campground.name %></h1>
	<div class="row">
		<div id="form-body">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" id="form-validation" novalidate>
				<div class="form-group">
					<span class="label font-weight-bold">Campground Name</span>
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Price per Night</span>
					<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" required/>
				</div>
				<div class="form-group">
				<span class="label font-weight-bold">Url Image</span>
					<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Address</span>
					<input class="form-control" type="text" name="campground[address]" value="<%= campground.address %>" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Latitude</span>
					<input class="form-control" type="number" name="campground[latitude]" value="<%= campground.latitude %>" min="-180" max="180" step="any" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Longitude</span>
					<input class="form-control" type="number" name="campground[longitude]" value="<%= campground.longitude %>" min="-180" max="180" step="any" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Phone Number</span>
					<input class="form-control" type="tel" name="campground[phone]" value="<%= campground.phone %>" required/>
				</div>
				<div class="form-group">
					<span class="label font-weight-bold">Description</span>
					<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" required/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<script src="/form-validation.js"></script>
			<a href="/campgrounds">Go Back!</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>
