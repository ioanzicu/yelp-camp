<% include ./partials/header %>

	<div class="container" id="form-container">
		<h1 id="form-edit">Login</h1>
		<div class="row">
			<div id="form-body">
				<form action="/login" method="POST" id="form-validation" novalidate>
					<div class="form-group">
						<input class="form-control" type="text" name="username" placeholder="username" required>
					</div>
					<div class="form-group">
						<input class="form-control" type="password" name="password" placeholder="password" required>
					</div>
					<button class="btn btn-lg btn-primary btn-block">Login</button>
				</form>
				<script src="/form-validation.js"></script>
				<br />
				<div class="d-flex justify-content-between">
					<% if(!currentUser){ %>
						<a class="btn border" href="/register">Sign Up!</a>
						<a class="btn border" href="/login">Login!</a>
					<% } else { %>
						<a class="btn border" href="/logout">Logout!</a>
					<% } %>
				</div>
	 		</div>
		</div>
		<div class="space-footer"></div>
	</div>

<% include ./partials/footer %>